{
   "compilerOptions" : {
    "incremental": true,
      "strictBindCallApply" : true,
      "esModuleInterop" : true,
      "allowSyntheticDefaultImports" : true,
      "strictNullChecks" : true,
      "strictFunctionTypes" : true,
      "strict" : true,
      "lib" : [
         "es6",
         "dom"
      ],
      "target" : "es6",
      "module" : "commonjs",
      "alwaysStrict" : true,
      "noImplicitThis" : true,
      "emitDecoratorMetadata" : true,
      "experimentalDecorators" : true,
      "outDir" : "lib",
      "strictPropertyInitialization" : true,
      "declaration" : true,
      "noImplicitAny" : true,
      "jsx" : "react"
   },
    "exclude": ["node_modules/**/*", "lib/**/*", "lib/*", "**/*.test.ts", "**/*.test.tsx"]
}
